<body class="">
  <nav class="navbar nav navbar-expand-lg navbar-light bg-light wrapper pt-3 pb-3">
    <a class="nav__nav-logo" href="http://xshare.ga">
      xShare
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="http://xshare.ga/team">
            Meet the Team
          </a>
        </li>
      </ul>
    </div>
  </nav>
  <main style='margin-top: 70px' class="home-section ">
    <div class="left-section" >
      <h1 class="left-section-title">
        The most seamless
        <br />
        file transfer experience
      </h1>
      <h4 class="left-section-content">
        Fast, Safe and Secure.... <br />
        Upload a file and share it with your friends via email or a generated link
      </h4>
      <div class="left-section-image-one"></div>
      <!-- <img class="left-section-image"
        src="https://res.cloudinary.com/ibefx/image/upload/v1572451091/sharing_1_btfhst.png" alt="" /> -->
    </div>
    <div class="right-section " >
      <div class="download_div">
        <div class="header2">
          <H2>Your file is ready for download</H2>
                  <div>
                    <p style="margin: 0;"><%=fileName %></p>
                    <p style="margin: 0;"><%=size %></p>
                  </div>

        </div>
        <!-- <div class="file-image"></div> -->
        <!-- <p>this file has been downloaded <%=currentCount %> times</p> -->
        <form id="myForm" action="/<%=shortenId %>" method="POST">
          <button id="dl" class=" dl download  btn">
          </button>
          <button id="dl" class="  download_sec"> Download</button>
        </form>

      </div>
    </div>
  </main>
  <footer id="footer">
    <div class="footer">
      <p id="year">
        <script>
          document.getElementById('year').appendChild(document.createTextNode(new Date().getFullYear()))
        </script>
